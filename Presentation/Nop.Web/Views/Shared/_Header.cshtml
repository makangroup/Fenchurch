
<div class="header" style=" position: fixed;">

    @await Component.InvokeAsync("Widget", new { widgetZone = PublicWidgetZones.HeaderBefore })

    <div class="header-upper headerupper masterwrapperpage2" style="width:100%;">
        <div class="header-selectors-wrapper">
            <b><a href="/specials-29">Click and collect Available</a></b>
        </div>
        <div class="header-selectors-wrapper">
            <img src="~/icons/delivery-icon-transparent.png" />
            <b>Nationwide Delivery</b>
        </div>
        <div class="header-selectors-wrapper">
            <b> Call us on <a href="tel:6495287044" style="color:blue"> +64 9 528 7044</a></b>
        </div>
    </div>
    @await Component.InvokeAsync("Widget", new { widgetZone = PublicWidgetZones.HeaderMiddle })
    <div class="header-lower masterwrapperpage1">
        <div class="header-logo">
            @await Component.InvokeAsync("Logo")
        </div>
        <div class="search-box store-search-box">
            @await Component.InvokeAsync("SearchBox")
        </div>
        <div class="header-links-wrapper">
            @await Component.InvokeAsync("HeaderLinks")
